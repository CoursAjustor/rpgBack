{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@/*": ["src/*"],
      "@login": ["src/login/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "includes": ["src"]
}
